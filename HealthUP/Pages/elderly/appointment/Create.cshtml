@page
@model HealthUP.Pages.elderly.appointments.CreateModel
@{
    ViewData["Title"] = "Make an Appointment";

}
<h1>Make an appointment</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div> <label class="text-danger">@Model.MyMessage</label> </div>

    <div>
        <label class="col-sm-2 col-form-label">Appointment Id:</label>
        <input asp-for="MyAppointment.Id" placeholder="1" />
        <span asp-validation-for="MyAppointment.Id" class="text-danger"></span>
    </div>

    <div>
        <label class="col-sm-2 col-form-label">Symptoms:</label>
        @Html.DropDownList("MyAppointment.Symptoms", new SelectList(Enum.GetValues(typeof(Models.Symptoms))), "--Select an option--")
        <span asp-validation-for="MyAppointment.Symptoms" class="text-danger"></span>
    </div>

    <div>
        <label class="col-sm-2 col-form-label">Available Date:</label>
        <input asp-for="MyAppointment.AvailableDate" />
        <span asp-validation-for="MyAppointment.AvailableDate" class="text-danger"></span>
    </div>

    <div>
        <label class="col-sm-2 col-form-label">Available Timeslot:</label>
        @Html.DropDownList("MyAppointment.AvailableTimeslot", new SelectList(Enum.GetValues(typeof(Models.Timeslot))), "--Select an option--")
        <span asp-validation-for="MyAppointment.AvailableTimeslot" class="text-danger"></span>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">Consultation Fee:</label>
        <input readonly asp-for="MyAppointment.ConsultationFee" value="30" />
        <span asp-validation-for="MyAppointment.ConsultationFee" class="text-danger"></span>
    </div>
    <div class="col-sm-10">
        <input id="create" type="submit" value="Pay" class="btn btn-primary" />
    </div>

</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
