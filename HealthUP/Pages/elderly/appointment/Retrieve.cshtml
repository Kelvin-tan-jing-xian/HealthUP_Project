@page
@model HealthUP.Pages.elderly.appointment.RetrieveModel
@{
    ViewData["Title"] = "Retrieve";

}
<h1>Upcoming Appointments</h1>



<div>
    <label class="col-sm-2 col-form-label">Symptoms:</label>
    <label>@Model.MyAppointment.Symptoms</label>
</div>

<div>
    <label class="col-sm-2 col-form-label">Available Date:</label>
    <label>@Model.MyAppointment.AvailableDate.ToShortDateString()</label>

</div>
<div>
    <label class="col-sm-2 col-form-label">Available Timeslot:</label>
    <label>@Model.MyAppointment.AvailableTimeslot</label>
</div>


<div>
    <label class="col-sm-2 col-form-label">Payment Method:</label>
    <label>@Model.MyAppointment.PaymentMethod</label>
</div>
<div>
    <label class="col-sm-2 col-form-label">Consultation Fee:</label>
    <label>@Model.MyAppointment.ConsultationFee</label>
</div>
<div class="col-sm-10">
    <a class="btn btn-primary" asp-page="/elderly/appointment/Edit">Reschedule</a>

</div>


